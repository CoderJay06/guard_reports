<h4>Update a report</h4>
<form action="/reports/<%= @report.id %>" method="POST">
   <input id="hidden" type="hidden" name="_method" value="patch">
   <div>
      <div>
         <label for="report_type">Type</label>
         <input id="report_type" type="text" name="report_type" value="<%= @report.report_type %>"
      minlength="5" maxlength="30">
      </div>
      <br>
      <div>
         <label for="report_date">Date</label>
         <input id="report_date" type="date" name="date" value="<%= @report.date %>">
         </div>
      <br>
      <div>
         <label for="report_time">Time</label>
         <input id="report_time" type="time" name="time" value="<%= @report.time %>">
         </div>
      <br>
      <div>
         <label for="report_location">Location</label>
         <input id="report_location" type="text" name="location" value="<%= @report.location %>"
      minlength="2">
      </div>
      <br>
      <div>
         <p>Description:</p>
         <textarea id="report_description" name="description" rows="10" cols="50" 
      minlength="10" placeholder="<%= @report.description %>"></textarea>
      </div>
      <br>
      <div>
         <% if @report.guard == current_user %>
            <input type="submit" value="Update">
         <% end %>
      </div>
   </div>
</form>